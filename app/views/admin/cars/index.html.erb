<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Admin Dashboard - Cars</h1>
    <%= link_to "Add New Car", new_admin_car_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="w-full divide-y divide-gray-200 ">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/3">Car</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Year</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Price</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Range</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @cars.each do |car| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <div class="flex items-center justify-center space-x-4 py-2">
                <div class="flex-shrink-0 w-[60px] h-[40px] bg-gray-100 flex items-center justify-center">
                  <% if car.image.attached? %>
                    <%= image_tag car.image, class: "rounded", style: "width: 60px; height: 40px; object-fit: contain;" %>
                  <% else %>
                    <%= image_tag "https://cdn.vectorstock.com/i/500p/58/06/black-race-car-mockup-isolated-vehicle-template-vector-42775806.jpg", 
                        class: "rounded", style: "width: 60px; height: 40px; object-fit: contain;" %>
                  <% end %>
                </div>
                <div class="flex-1 text-center px-4">
                  <div class="text-lg font-medium text-gray-900"><%= car.brand %> <%= car.name %></div>
                  <div class="text-sm text-gray-500 mt-2">Model Year: <%= car.model_year %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center justify-center h-full">
                <div class="text-sm text-gray-900"><%= car.model_year %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center justify-center h-full">
                <div class="text-sm text-gray-900">$<%= number_with_delimiter(car.price) %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center justify-center h-full">
                <div class="text-sm text-gray-900"><%= car.range %> miles</div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center justify-center h-full space-x-4">
                <%= link_to "Edit", edit_admin_car_path(car), class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Delete", admin_car_path(car), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "text-red-600 hover:text-red-900" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 