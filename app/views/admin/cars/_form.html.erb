<%= form_with(model: [:admin, car], class: "space-y-6") do |f| %>
  <% if car.errors.any? %>
    <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <h2 class="font-bold"><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>
      <ul>
        <% car.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :brand, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :brand, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :model_year, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :model_year, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :price, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :range, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :range, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :battery_capacity, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :battery_capacity, step: :any, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :charging_time, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :charging_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :power, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :power, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :torque, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :torque, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :acceleration, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :acceleration, step: :any, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :top_speed, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :top_speed, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :dimensions, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :dimensions, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :weight, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :weight, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :cargo_space, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :cargo_space, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :seats, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :seats, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="md:col-span-2">
      <%= f.label :image, class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :image, class: "mt-1 block w-full" %>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", admin_cars_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %> 