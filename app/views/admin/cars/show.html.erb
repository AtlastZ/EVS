<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Car Details</h1>
    <div class="space-x-4">
      <%= link_to "Edit", edit_admin_car_path(@car), class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
      <%= link_to "Back to Cars", admin_cars_path, class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700" %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="flex flex-col md:flex-row gap-8">
        <div class="md:w-1/3">
          <div class="bg-gray-100 rounded-lg p-4 flex items-center justify-center">
            <% if @car.image.attached? %>
              <%= image_tag @car.image, class: "max-h-64 w-auto object-contain" %>
            <% else %>
              <%= image_tag "https://cdn.vectorstock.com/i/500p/58/06/black-race-car-mockup-isolated-vehicle-template-vector-42775806.jpg", 
                  class: "max-h-64 w-auto object-contain" %>
            <% end %>
          </div>
        </div>
        
        <div class="md:w-2/3">
          <h2 class="text-2xl font-bold mb-4"><%= @car.full_name %></h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-sm font-medium text-gray-500">Price</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.price_formatted %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Range</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.range_with_unit %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Battery Capacity</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.battery_capacity_with_unit %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Charging Time</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.charging_time %> hours</p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Power</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.power_with_unit %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Torque</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.torque_with_unit %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Acceleration (0-100 km/h)</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.acceleration_with_unit %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Top Speed</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.top_speed_with_unit %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Weight</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.weight_with_unit %></p>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-500">Seats</h3>
              <p class="mt-1 text-lg font-semibold"><%= @car.seats %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 